<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScheduleAndStockManagement.Views.CustomerPage"
    Title="Customers">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Page title -->
        <Label Text="Customers"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Add customer button -->
        <Button Text="Add Customer"
                x:Name="AddButton"
                Clicked="OnAddClicked"/>

        <!-- Column headers -->
        <Grid ColumnSpacing="10" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Label Text="Name" FontAttributes="Bold" Grid.Column="0"/>
            <Label Text="Phone" FontAttributes="Bold" Grid.Column="1"/>
            <Label Text="Added At" FontAttributes="Bold" Grid.Column="2"/>
        </Grid>

        <!-- Customer list -->
        <CollectionView x:Name="CustomerList"
                        SelectionMode="Single"
                        SelectionChanged="OnCustomerSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="0"
                            BackgroundColor="#2A2A2A"
                            Padding="0">
                        <StackLayout Spacing="0">

                            <Grid ColumnSpacing="10" Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       Grid.Column="0"/>

                                <Label Text="{Binding Phone}"
                                       Grid.Column="1"/>

                                <Label Text="{Binding AddedAt, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                                       FontSize="12"
                                       Grid.Column="2"/>
                            </Grid>

                            <BoxView HeightRequest="1"
                                     BackgroundColor="White"
                                     HorizontalOptions="FillAndExpand"/>

                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
