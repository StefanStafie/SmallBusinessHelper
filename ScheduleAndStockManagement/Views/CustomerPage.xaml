<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScheduleAndStockManagement.Views.CustomerPage"
    Title="Customers">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Button Text="Add Customer"
                    x:Name="AddButton"
                    Clicked="OnAddClicked"/>

            <Grid ColumnSpacing="10" Padding="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Entry Placeholder="Filter Name" x:Name="FilterName" TextChanged="OnFilterChanged" Grid.Column="0"/>
                <Entry Placeholder="Filter Phone" x:Name="FilterPhone" TextChanged="OnFilterChanged" Grid.Column="1"/>
                <Entry Placeholder="Filter Date (dd.MM.yyyy)" x:Name="FilterDate" TextChanged="OnFilterChanged" Grid.Column="2"/>
            </Grid>

            <Grid ColumnSpacing="10" Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Label Text="Name" Grid.Column="0"/>
                <Label Text="Phone" Grid.Column="1"/>
                <Label Text="Added At" Grid.Column="2"/>
            </Grid>

        </VerticalStackLayout>

        <CollectionView x:Name="CustomerList"
                        Grid.Row="2"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="1"
                            Padding="0">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCustomerTapped"/>
                        </Border.GestureRecognizers>

                        <StackLayout Spacing="0">

                            <Grid ColumnSpacing="10" Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Name}"
                                       Grid.Column="0"/>

                                <Label Text="{Binding Phone}"
                                       Grid.Column="1"/>

                                <Label Text="{Binding AddedAt, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                                       Grid.Column="2"/>
                            </Grid>

                            <BoxView HeightRequest="1"
                                     BackgroundColor="White"/>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
