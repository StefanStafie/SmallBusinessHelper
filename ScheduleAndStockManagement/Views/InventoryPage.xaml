<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScheduleAndStockManagement.Views.InventoryItemTypesPage"
    Title="Inventory Item Types">

    <VerticalStackLayout Padding="10" Spacing="10">
        
        <Button Text="Add Item Type" 
                x:Name="AddItemType"
                Clicked="OnAddItemTypeClicked"/>

        <Grid ColumnSpacing="10" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>

            <Label Text="For Sale?" FontAttributes="Bold" Grid.Column="0"/>
            <Label Text="Name" FontAttributes="Bold" Grid.Column="1"/>
            <Label Text="Description" FontAttributes="Bold" Grid.Column="5"/>
        </Grid>


        <CollectionView x:Name="InventoryList"
                        SelectionMode="Single"
                        SelectionChanged="OnItemSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="0"
                            BackgroundColor="{Binding AppointmentType.BackgroundColor}"
                                Padding="0">
                        <StackLayout Spacing="0">
                            <Grid ColumnSpacing="10" Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="10*" />
                                    <ColumnDefinition Width="10*" />
                                </Grid.ColumnDefinitions>

                                <CheckBox IsChecked="{Binding ForSale}" VerticalOptions="Center" Grid.Column="0" InputTransparent="True" />
                                <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="{Binding AppointmentType.TextColor}" Grid.Column="1"/>
                                <Label Text="{Binding Description}" TextColor="{Binding AppointmentType.TextColor}" FontSize="12" Grid.Column="5"/>
                            </Grid>

                        </StackLayout>

                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
