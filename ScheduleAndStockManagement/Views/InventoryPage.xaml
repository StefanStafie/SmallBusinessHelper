<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ScheduleAndStockManagement.Views.InventoryPage"
    Title="Stock">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Label Text="Inventory"
           FontSize="24"
           HorizontalOptions="Center" />

        <Button Text="Add Item" 
            x:Name="AddButton"
            Clicked="OnAddClicked"/>

        <Grid ColumnSpacing="10" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Label Text="Name" FontAttributes="Bold" Grid.Column="0"/>
            <Label Text="Qty" FontAttributes="Bold" Grid.Column="1"/>
            <Label Text="Unit Price" FontAttributes="Bold" Grid.Column="2"/>
            <Label Text="Total Price" FontAttributes="Bold" Grid.Column="3"/>
            <Label Text="Added At" FontAttributes="Bold" Grid.Column="4"/>
        </Grid>


        <CollectionView x:Name="InventoryList"
                SelectionMode="Single"
                SelectionChanged="OnItemSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="0"
                            BackgroundColor="{Binding AppointmentType.BackgroundColor}"
                                Padding="0">
                        <StackLayout Spacing="0">
                            <Grid ColumnSpacing="10" Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Name}" FontAttributes="Bold" Grid.Column="0"/>
                                <Label Text="{Binding Quantity}" Grid.Column="1"/>
                                <Label Text="{Binding UnitPrice}" Grid.Column="2"/>
                                <Label Text="{Binding TotalPrice}" Grid.Column="3"/>
                                <Label Text="{Binding AddedAt, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                                                                                       FontSize="12"
                                                                                       Grid.Column="4"/>
                            </Grid>


                            <BoxView HeightRequest="1" BackgroundColor="White" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>

                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
