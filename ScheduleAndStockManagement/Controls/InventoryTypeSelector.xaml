<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ScheduleAndStockManagement.Controls.InventoryTypeSelector"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <HorizontalStackLayout x:Name="RadioButtonsContainer" Spacing="10">
        <RadioButton Content="For Sale Products"
                     GroupName="InventoryType"
                     Value="ForSaleProducts"
                     CheckedChanged="OnCheckedChanged"
                     IsChecked="True"/>

        <RadioButton Content="Maintenance Costs"
                     GroupName="InventoryType"
                     Value="MaintenanceCosts"
                     CheckedChanged="OnCheckedChanged"/>

        <RadioButton Content="Equipment"
                     GroupName="InventoryType"
                     Value="Equipment"
                     CheckedChanged="OnCheckedChanged"/>

        <RadioButton Content="Consumable"
                     GroupName="InventoryType"
                     Value="Consumable"
                     CheckedChanged="OnCheckedChanged"/>

        <RadioButton Content="Marketing"
                     GroupName="InventoryType"
                     Value="Marketing"
                     CheckedChanged="OnCheckedChanged"/>

        <RadioButton Content="Course"
                     GroupName="InventoryType"
                     Value="Course"
                     CheckedChanged="OnCheckedChanged"/>

        <RadioButton Content="Courtesy Items"
                     GroupName="InventoryType"
                     Value="CourtesyItems"
                     CheckedChanged="OnCheckedChanged"/>

        <RadioButton Content="Other"
                     GroupName="InventoryType"
                     Value="Other"
                     CheckedChanged="OnCheckedChanged"/>
    </HorizontalStackLayout>
</ContentView>
